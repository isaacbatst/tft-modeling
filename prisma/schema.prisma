// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  player Player[]
}

model Player {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  connected    Boolean
  gold         Int
  life         Int
  lobby        Lobby   @relation("lobby_players", fields: [lobbyId], references: [id], onUpdate: NoAction, onDelete: NoAction)
  lobbyId      String  @db.ObjectId
  user         User    @relation(fields: [userId], references: [id])
  userId       String  @db.ObjectId
  ownedLobbyId Lobby?  @relation("lobby_owner")
}

model Moment {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  lobby   Lobby  @relation(fields: [lobbyId], references: [id])
  lobbyId String @db.ObjectId
}

enum Game {
  DEFAULT
}

model Lobby {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  round   Int
  stage   Int
  moments Moment[]
  game    Game
  players Player[] @relation("lobby_players")
  owner   Player   @relation("lobby_owner", fields: [ownerId], references: [id])
  ownerId String   @unique @db.ObjectId
}
