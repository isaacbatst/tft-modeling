// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Player {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  connected Boolean
  gold      Int
  isOwner   Boolean
  life      Int
  game      Lobby   @relation(fields: [gameId], references: [id])
  gameId    String  @db.ObjectId
}

model Moment {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  game   Lobby  @relation(fields: [gameId], references: [id])
  gameId String @db.ObjectId
}

enum Game {
  DEFAULT
}

model Lobby {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  round   Int
  stage   Int
  players Player[]
  moments Moment[]
  game    Game
}
